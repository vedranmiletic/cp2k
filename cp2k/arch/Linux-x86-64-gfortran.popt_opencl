# - OpenSUSE Linux 12.3 (x86_64) [ module load gfortran-suite/4.8.2 ]
# - gcc            4.8.2
# - gfortran       4.8.2
# - Intel MKL      Parallel Studio XE v2011-08-23
# - OpenMPI        1.7.4
# - FFTW3          3.3.3
# - LIBXC          2.0.3
# - LIBINT         1.1.5 (with non default: --with-libint-max-am=5
#                                           --with-libderiv-max-am1=4)
# - OpenCL         1.1 (NVIDIA)
#

# LIB's ################################################################
LIBS     = -L${FFTW3_PATH}/lib64 \
             -lfftw3 \
           -L$(INTEL_MKL_LIB) \
             -lmkl_scalapack_lp64 \
             -lmkl_gf_lp64 \
             -lmkl_core \
             -lmkl_sequential \
             -lmkl_blacs_openmpi_lp64 \
             -lpthread \
             -lm \
           -L$(LIBINT_PATH)/lib64 \
             -lderiv \
             -lint \
           -L$(LIBXC_PATH)/lib64 \
             -lxc \
           -L/usr/lib64 \
             -lOpenCL -lrt

# PROG's ###############################################################
PERL     = perl
CPP      =
#CC       = gcc
#FC       = mpif90
#LD       = mpif90
CC       = gcc -g
FC       = mpif90 -g -fbacktrace
LD       = mpif90 -g
AR       = ar -r

# FLAG's ###############################################################
DFLAGS   = -D__GFORTRAN \
           -D__parallel \
           -D__BLACS -D__SCALAPACK \
           -D__FFTSG -D__FFTW3 \
           -D__ACC -D__DBCSR_ACC \
           -D__LIBXC2 \
           -D__LIBINT -D__LIBINT_MAX_AM=6 -D__LIBDERIV_MAX_AM1=5 \
           -D__USE_CP2K_TRACE \
           -D__HAS_ISO_C_BINDING

CPPFLAGS = $(DFLAGS) -traditional -C
#CFLAGS   = $(DFLAGS) -O3 -march=native -ffast-math -funroll-loops
#FCFLAGS  = $(DFLAGS) -O3 -march=native -ffast-math -funroll-loops -ftree-vectorize \
#           -ffree-form -ffree-line-length-none
CFLAGS   = $(DFLAGS) -O0
FCFLAGS  = $(DFLAGS) -O0 -ffree-form -ffree-line-length-none
LDFLAGS  = $(FCFLAGS)

OBJECTS_ARCHITECTURE = machine_gfortran.o
